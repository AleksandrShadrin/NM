@page "/PracticalOrder"
@inject IInaccuracyFinder _inaccuracyFinder
@inject IDUSolver _duSolver

<div class="row">
    <div class="col-3">
        <h4>Практический порядок для метода рунге:</h4>
        <h5>@PForRunge</h5>
        </div>
    <div class="col-3">
        <h4>Практический порядок для явного метода:</h4>
        <h5>@PForExplicitAdams</h5>
    </div>
    <div class="col-3">
        <h4>Практический порядок для неявного метода:</h4>
        <h5>@PForImplicitAdams</h5>
    </div>
</div>

@code {
    double PForImplicitAdams ;
    double PForExplicitAdams;
    double PForRunge;

    protected override Task OnInitializedAsync()
    {
        _duSolver.ConfigureOptions(opt => opt.P = 1);
        PForImplicitAdams = _inaccuracyFinder.FindPForImplicitAdamsMethod();

        _duSolver.ConfigureOptions(opt => opt.P = 4);
        PForExplicitAdams = _inaccuracyFinder.FindPForExplicitAdamsMethod();

        _duSolver.ConfigureOptions(opt => opt.P = 1);
        PForRunge = _inaccuracyFinder.FindPForMethodRunge();

        return base.OnInitializedAsync();
    }
}
